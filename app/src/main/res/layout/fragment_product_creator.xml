<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productCreator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.menu.containerFragmentProduct.ProductCreator">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="9dp"
        android:layout_height="22dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="32dp"
        android:text="$"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/firebaseImage"
        app:layout_constraintEnd_toStartOf="@+id/productPrice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/productStock"
        app:layout_constraintTop_toBottomOf="@+id/productProviderCode"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="24dp"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/accept_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/button_upload"
        app:layout_constraintVertical_bias="0.523" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productPrice"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Precio"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/productStock"
        app:layout_constraintTop_toBottomOf="@+id/productProviderCode" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productStock"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Stock"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/productProviderCode" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productProviderCode"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Código Proveedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/productInternalCode" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productInternalCode"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Código Interno del Producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/productcategory" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productname"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="Nombre del Producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productcategory"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Categoría"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/productdescription" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productdescription"
        android:layout_width="375dp"
        android:layout_height="123dp"
        android:layout_marginTop="8dp"
        android:hint="Descripción del Producto"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/productname" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:src="@drawable/cctvlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:text="ACEPTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_upload" />

    <Button
        android:id="@+id/button_upload"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="19dp"
        android:text="IMAGEN"
        app:layout_constraintEnd_toStartOf="@+id/firebaseImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/productStock" />

    <ImageView
        android:id="@+id/firebaseImage"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/productStock"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

    <HorizontalScrollView
        android:id="@+id/hsv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/container_selected_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:animateLayoutChanges="true"
            android:gravity="start"
            android:orientation="horizontal"
            android:visibility="visible" />
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>