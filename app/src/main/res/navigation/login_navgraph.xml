<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.gestionpresupuesto.fragments.login.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_menuActivity"
            app:destination="@id/menuActivity" />
        <action
            android:id="@+id/action_login_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <activity
        android:id="@+id/menuActivity"
        android:name="com.example.gestionpresupuesto.activities.MenuActivity"
        android:label="activity_menu"
        tools:layout="@layout/activity_menu" />
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.gestionpresupuesto.fragments.login.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_login"
            app:destination="@id/login" />
    </fragment>
</navigation>